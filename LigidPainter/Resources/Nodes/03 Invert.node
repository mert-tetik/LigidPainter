# For ligidtools.com
# Node extension v1.0

%attributes;

-title : Invert;
-color : hex4287f5; #rgb122,124,66  #hsv86,45,23
-opacity : 60;

-input_0 : 
--list : none;
--list_index : none;
--type : vec3;
--title : Color;
--element : color;
--value : 0,0,0;

-output_0 :
--list : none;
--list_index : none;
--type : vec3;
--title : Texture;


-uniforms : tex_coords|normal|posScene|posModel;

%code;

void main (){
    output_0 = vec4(vec3(1) - texture(input_0,tex_coords).rgb,1);
}