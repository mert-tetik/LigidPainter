#ligidFilter

in vec2 TexCoords;
uniform sampler2D txtr;
out vec4 fragColor;

void main(){
    fragColor = vec4(texture(txtr, TexCoords).rgb, 1.);
    fragColor.a = texture(txtr, TexCoords).a;

    fragColor.r = max(max(fragColor.r, fragColor.g), fragColor.b);
    fragColor.g = 0.;
    fragColor.b = 0.;
}